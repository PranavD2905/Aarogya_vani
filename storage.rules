rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /patient_profiles/{patientId}/{allPaths=**} {
      // Allow read access to all authenticated users
      allow read: if request.auth != null;
      
      // Allow write access only to the patient's own profile image
      allow write: if request.auth != null 
        && request.auth.uid == patientId
        && request.resource.size < 5 * 1024 * 1024 // 5MB max file size
        && request.resource.contentType.matches('image/.*'); // Only allow images
    }
  }
}